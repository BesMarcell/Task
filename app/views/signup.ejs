<!DOCTYPE html>
<html xmlns:ng="http://angularjs.org">
<head>
    <script src="/lib/jquery/dist/jquery.js"></script>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" />
    <script src="/lib/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
    <link href="/css/styles.css" rel="stylesheet" />
<title>

        <%=title %>
</title>

</head>
<body>

<script type="text/javascript" src="/lib/angular/angular.js"></script>
<script type="text/javascript" src="/lib/angular-route/angular-route.js"></script>
<script type="text/javascript" src="/lib/angular-resource/angular-resource.js"></script>
<script type="text/javascript" src="/lib/angularUtils-pagination/dirPagination.js"></script>

<script type="text/javascript" src="/example/example.client.module.js"></script>

<script type="text/javascript" src="/example/controllers/example.client.controller.js"></script>
<script type="text/javascript" src="/example/config/example.client.routes.js"></script>

<script type="text/javascript" src="/users/users.client.module.js"></script>
<script type="text/javascript" src="/users/services/authentication.client.service.js"></script>

<script type="text/javascript" src="/application.js"></script>


<% for(var i in messages) { %>
<div class="flash"><%= messages[i] %></div>
    <% } %>
<section ng-controller="ExampleController">

<form action="/signup" method="post" role="form" name = "userSignUp" id="sign" novalidate>
    <div class="well">
        <div class="form-group">
            <div>
                <label for="firstName">First Name:</label>
                <input type="text" class="form-control" name="firstName" id = "firstName" ng-model="fname" placeholder="Input First Name" required />
            </div>
            <span class= "error" ng-show="userSignUp.firstName.$error.required">
                 Please enter a First name.
            </span>
            <div>
                <label>Last Name:</label>
                <input type="text" class="form-control" name="lastName" id = "lastName" ng-model="lname" placeholder="Input Last Name" required/>
            </div>
            <span class= "error" ng-show="userSignUp.lastName.$error.required">
                 Please enter a Last name.
            </span>
            <div>
                <label>Email:</label>
                <input type="text" class="form-control" name="email" id = "email" ng-model="email" placeholder="Input Email" ng-pattern="/^[-\w.]+@([A-z0-9][-A-z0-9]+\.)+[A-z]{2,4}$/" required/>
            </div>
            <span class= "error" ng-show="userSignUp.email.$error.required">
                 Please enter an E-mail.
            </span>
            <div>
                <label>Username:</label>
                <input type="text" class="form-control" name="username" id = "username" ng-model="username" placeholder="Input user Name" required ng-pattern="/^[a-zA-Z0-9-\.]{4,20}$"  required/>
            </div>
            <span class= "error" ng-show="userSignUp.username.$error.required">
                 Please enter an Username.
            </span>
            <div>
                <label>Password:</label>
                <input type="password" class="form-control" name="password" id = "password" ng-model="password" ng-minlength="7" placeholder="Input password" required/>
            </div>
            <span class= "error" ng-show="userSignUp.password.$error.required">
                 Please enter an Password.
            </span>
            <span class= "error" ng-show="userSignUp.password.$error.minlength">
                 Password must be more then 6 symbols.
            </span>
                 <p>
                <div>
                    <input type="submit" id="SignUp" class="btn btn-primary" value="Sign up" ng-disabled="userSignUp.$invalid"/>

                    <input type="cancel" value="Cancel" class="btn btn-primary" onclick="document.location.href = '/'"/>
                </div>
                </p>
        </div>
    </div>
</form>
</section>

</body>
</html>



